<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BlokusMainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="615dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rulesDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Rules"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rules1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_horizontal"
            android:text="The objective of the game is to place all your pieces on the board."
            android:textSize="24sp" />

        <TextView
            android:id="@+id/rules2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:gravity="center_horizontal"
            android:text="Your first piece must be placed with one of its tiles in the corner marked with your color."
            android:textSize="24sp" />

        <TextView
            android:id="@+id/rules3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:gravity="center_horizontal"
            android:text="Each piece you place must be touching one or more corners of another one of your pieces. Edges of same-color pieces may not touch."
            android:textSize="24sp" />

        <TextView
            android:id="@+id/rules4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:gravity="center_horizontal"
            android:text="There are two ways to win. 1) a player is the first to place all of their pieces on the board. 2) When no one can place any more pieces, the player with the current highest score wins."
            android:textSize="24sp" />


        <TextView
            android:id="@+id/rules7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"
            android:text="Find complete rules at: https://entertainment.howstuffworks.com/leisure/brain-games/blokus1.htm"
            android:textSize="18sp" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:text="return"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>